<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DoctorActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/border_round"
        android:layoutDirection="ltr"
        android:padding="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_on_the_appropriate"
            android:textAlignment="center"
            android:textColor="@color/main_TextColor"
            android:textSize="@dimen/_16ssp" />


        <TextView
            android:id="@+id/timeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:textAlignment="center"
            android:textColor="@color/main_TextColor"
            android:textSize="@dimen/_16ssp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="@string/today"
            android:textColor="@color/main_TextColor"
            android:textSize="@dimen/_16ssp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="9:00 AM"
                    android:text="9:00 AM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="10:30 AM"
                    android:text="10:30 AM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="11:40 AM"
                    android:text="11:40 AM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="1:00 PM"
                    android:text="1:00 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="2:45 PM"
                    android:text="2:45 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="3:30 PM"
                    android:text="3:30 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="4:00 PM"
                    android:text="4:00 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="5:40 PM"
                    android:text="5:40 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="6:20 PM"
                    android:text="6:20 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="7:00 PM"
                    android:text="7:00 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="7:30 PM"
                    android:text="7:30 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/table_item_border"
                    android:onClick="selectTime"
                    android:padding="@dimen/_8sdp"
                    android:tag="8:00 PM"
                    android:text="8:00 PM"
                    android:textAlignment="center"
                    android:textColor="@color/main_TextColor"
                    android:textSize="@dimen/_12ssp" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/border_round"
            android:gravity="center"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvLogin" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>